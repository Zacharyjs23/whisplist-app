{
  "extends": "./node_modules/expo/tsconfig.base.json",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ],
      "react-native-purchases": [
        "./shims/react-native-purchases"
      ]
    },
    "moduleResolution": "bundler",
    "jsx": "react-native",
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.d.ts"
  ],
  "exclude": [
    "functions",
    "functions/**/*"
  ]
}
